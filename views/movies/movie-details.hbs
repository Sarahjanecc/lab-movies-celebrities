<h2>Movie Datails</h2>
<div>
  <h2>{{movie.title}}</h2>
  <h4>{{movie.genre}}</h4>
  <p>{{movie.plot}}</p>
  
  <a href="/movies/{{movie._id}}/edit">
    <button class="btn btn-warning">Actualizar</button>
  </a>

  <form action="/movies/{{movie._id}}/delete" method="POST">
    <button class="btn btn-danger">Borrar</button>
  </form>

</div>